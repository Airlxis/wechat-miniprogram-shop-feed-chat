<!--pages/MomentDetail/MomentDetail.wxml-->

<!--顶部导航栏-->
<text style="position: fixed;margin-right: auto;margin-top: 110rpx;z-index: 2;" bind:tap="NavigateBack">返回</text>
<view style="width: 100%;height: 180rpx;display: flex;;justify-content: center;background-color: rgb(255, 255, 255);align-items: center;position: fixed;z-index: 1;">
  <text style="margin-top: 70rpx;font-size: 40rpx;">动态详情</text>
</view>

<!--用户-->
<view style="margin-top: 180rpx;" class="UserContainer" bind:tap="ToOther" data-openid="{{SenderProfile.openid}}">
 <image class="ProfilePhoto" mode="aspectFill" src="{{SenderProfile.avatarUrl}}"></image>
 <text style="font-size: 33rpx;margin-left: 19rpx;">{{SenderProfile.nickName}}</text>
</view>
<!--图片-->
<swiper class="ImageContainer" indicator-dots="true" autoplay="true" interval="5000" duration="1000">
  <block wx:for="{{Moment.ImageFileIDs}}" wx:key="id">
    <swiper-item>
      <image show-menu-by-longpress="true" src="{{item}}" class="slide-image" mode="aspectFit"/>
    </swiper-item>
  </block>
</swiper>


  <textarea style="font-size: 35rpx;width: 100%;margin-bottom: 120rpx;" auto-height="true" value="{{Moment.Text}}" disabled="true"
  ></textarea>


<view class="LM">
      <image bind:tap="CancleLike" class="like" wx:if="{{liked}}" src="/images/社交-点赞.png"></image>
      <image bind:tap="GiveLike" class="like" wx:else="{{liked}}" src="/images/未赞.png"></image>
      <text>{{LikeNumber}}</text>
      <image  data-index="{{item._id}}" class="likee" src="/images/评论.png"></image>
      <text>{{CommentNumber}}</text>
</view>

<view class="LeaveMessage">
  <input value="{{inputvalue}}" class="input" placeholder="留言...."  bindinput="input"  />
  <text style="flex: 1;font-weight:500;display: flex;justify-content: center;" size="mini" bind:tap="SendComment">发送</text>
</view>

<view class="message-box">
<block wx:for="{{Comments}}" wx:key="id" >
  <view class="message">
    <image class="avatar" src="{{item.avatarUrl}}"></image>
    <view class="content">
      <text class="nickname">{{item.nickName}}</text>
      <text class="message">{{item.content}}</text>
    </view>
    <text class="time">{{item.time}}</text>
  </view>
</block>
</view>