/* pages/GoodDetail/GoodDetail.wxss */
page{
  background-color: #ffe79f;
}

.UserContainer{
  margin-top: 19rpx;
  margin-left: 19rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ProfilePhoto{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.ImageContainer{
  width: 100%;
  height: 385rpx;
  margin-top: 38rpx;
}

.slide-image {
  width: 100%;  
  height: 100%;  
  }

.LeaveMessage{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.text{
  font-size: 38rpx;
  flex: 1;
  height: 100%;
  background-color: aqua;
}

.input{
  flex: 5;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 19rpx;
}

.send{
  flex: 2;
}

.message-box {
  display: flex;
  flex-direction: column; /* 竖向排列 */
 }
  
 .message {
  display: flex;
  margin-bottom: 19rpx; /* 留言间隔 */
  align-items: center;
 }
  
 .avatar {
  width: 77rpx;
  height: 77rpx;
  border-radius: 50%; /* 头像圆形 */
 }
  
 .content {
  flex: 1;
  margin-left: 19rpx;
 }
  
 .nickname {
  font-weight: bold;
 }
  
 .time {
  font-size: 23rpx;
  color: #999;
 }
