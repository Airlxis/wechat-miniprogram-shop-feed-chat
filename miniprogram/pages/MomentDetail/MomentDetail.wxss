/* pages/MomentDetail/MomentDetail.wxss */
.UserContainer{
  margin-top: 19rpx;
  margin-left: 19rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ProfilePhoto{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.ImageContainer{
  width: 100%;
  height: 1154rpx;
}
.slide-image {
  width: 100%;  
  height: 100%;  
}
.LeaveMessage{
    display: flex;
    align-items: center;
    margin-bottom: 40rpx;
}
.input{
  flex: 5;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  padding: 19rpx;
}

.text{
    font-size: 38rpx;
    height: 100%;
    background-color: aqua;
}
.message-box {
  display: flex;
  flex-direction: column; /* 竖向排列 */
 }
  
 .message {
  display: flex;
  margin-bottom: 19rpx; /* 留言间隔 */
  align-items: center;
 }
  
 .avatar {
  width: 77rpx;
  height: 77rpx;
  border-radius: 50%; /* 头像圆形 */
 }
  
 .content {
  flex: 1;
  margin-left: 19rpx;
 }
  
 .nickname {
  font-weight: bold;
 }
  
 .time {
  font-size: 23rpx;
  color: #999;
 }
 .LM{
  display: flex;
  align-items: center;
  margin-right: 19rpx;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}
 .like{
  width: 54rpx;
  height: 54rpx;
}

.likee{
  width: 58rpx;
  height: 58rpx;
}
